#include<stdio.h>
#include<string.h>


int main(void){
    char s[2001];
    while(scanf("%s", s)!=EOF){
        int ans=0;
        int len=strlen(s);
        //printf("len = %d.\n", len);
        
        for(int i=2; i<=len; i++){//the seq len
            for(int p=0; p<(len-i+1); p++){
                char cmp[i+1];
                strncpy(cmp, s+p, i);
                cmp[i]='\0';
                
                char reverse[i+1];
                for(int j=0; j<i; j++){ 
                    reverse[j]=cmp[i-1-j];
                }
                reverse[i]='\0';
                
                //printf("reverse=%s ", reverse);
                //printf("cmp=%s ", cmp);
                
                if(strcmp(reverse, cmp)==0){
                    ans++;
                    //printf("i=%d, ans = %d.\n", i, ans);
                }    
                
            }
            
            
            
        }
        
        printf("%d\n", ans);
        
    }
}

