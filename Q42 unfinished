#include<stdio.h>

int main(void){
    int t;
    scanf("%d", &t);
    
    while(t--){ //10^6
    long long color[3];
    for(int i=0; i<3; i++){
        scanf("%lld", &color[i]);
    }
    
    for(int i=0; i<3; i++){ //氣泡排序
        for(int j=i+1; j<3; j++){
            if(color[i]>color[j]){
                long long temp=color[i];
                color[i]=color[j];
                color[j]=temp;
            }
        }
    }
    
    //for(int i=0; i<3; i++){ //test
        //printf("%d ", color[i]);
    //}
    
    long long ans=0;
    if(color[2]>color[1] && color[1]>color[0]){
        long long k=color[2]-color[1];
        ans=ans+color[1];
        //printf("k=%d ", k); //test
        if(k>color[0]){
            ans=ans+color[0];}
        else{
            ans=ans+k;
            
        }
    }
    else{
        if(color[0]==color[1] && color[1]!=color[2]){
            ans=color[0]*2;
        }
        else if(color[1]==color[2] && color[0]!=color[1]){
            ans=ans+color[0];
            long long smallshare=color[1]-color[0]/2-color[0]%2;
            ans=ans+smallshare;
        }
        else{
            ans=ans+color[1]+color[1]/2;
        }
    }
    
    printf("%lld\n", ans);
    }
    
    return 0;
}
