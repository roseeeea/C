#include<stdio.h>
#include<stdlib.h>
long long a[1000000];

long long find_position(long long x, long long n){
	int l=0, r=n;
    int ansl=0;
    int ansr=n;
    while(l<r){
    	int m=(l+r)/2;
        if(a[m]<x){
            ansl=m;
            l=m+1;
        }
        else if(a[m]>x){
            r=m;
            ansl=m;
        }
        else if(a[m]==x){
         ansl=m;
       	 break;
        }
    }
    
    if((a[ansr]-x)<(x-a[ansl])){
    	return ansr;
    }
    else{
    	return ansl;
    }
    
}

int main(void){
	long long n, k, q;
    scanf("%lld%lld%lld", &n, &k, &q);
    
    for(int i=0; i<n; i++){
    	scanf("%lld", &a[i]);
    }
    
    while(q--){
    	long long x;
        long long ans;
        scanf("%lld", &x);
        long long p=find_position(x, n);
        printf("%lld", p);
        if(p<(n-1)){
        	if(p<0){
            	p=p+n;
            }
      		printf("%d\n", p+1);
        }
        else{
            printf("gan ni nya sai bau.\n");
        }
        
       
    }
   

}



